<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_graph_gradient"
    tools:context="com.india.android.todo.create_todo.CreateTodoActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        android:elevation="6dp"
        app:cardBackgroundColor="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="32dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiTaskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@color/colorGradientEnd"
                android:hint="@string/task_create_hint"/>

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_time_btn"
                android:layout_below="@id/tiTaskTitle"
                android:layout_marginTop="30dp"
                android:letterSpacing="0.08"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/bg_filled_btn"
                android:textColor="@color/colorGradientStart"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:id="@+id/tvSubmitTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit_btn"
                android:layout_below="@id/tvStartTime"
                android:layout_marginTop="30dp"
                android:letterSpacing="0.08"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:background="@drawable/bg_btn_colored"
                android:textColor="@android:color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
